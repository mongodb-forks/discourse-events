{{#if canGo}}
  <button class='btn btn-small btn-text {{goingClasses}}' {{action 'going'}}>
    {{#if goingSaving}}
      {{loading-spinner size='small'}}
    {{/if}}
    <span class="d-button-label">
      {{i18n 'event_rsvp.going.rsvp'}}
    </span>
  </button>
{{/if}}
<div class="event-rsvp-details">
  {{#if hasGuests}}
    {{#if currentUser}}
      <a {{action 'openModal'}}>
        <span>{{goingTotal}}</span>
        <span>{{i18n 'event_rsvp.going.rsvpd'}}</span>
      </a>
    {{else}}
      <span>{{goingTotal}}</span>
      <span>{{i18n 'event_rsvp.going.rsvpd'}}</span>
    {{/if}}
  {{/if}}
  {{#if goingMessage}}
    <span class="going-message">
      {{goingMessage}}
    </span>
  {{/if}}
</div>
